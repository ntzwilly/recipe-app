<div class="margin-top">
 <div class="w-50 mx-auto mt-5">
<div class="card">
  <div class="card-header">
    <h4>Sign up</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }, html: { class: "sign-up"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group mb-3">
      <%= f.label :name %><br />
      <%= f.text_field :name, class:"form-control"%>
    </div>

    <div class="field form-group mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
    </div>

    <div class="field form-group mb-3">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password" %>
    </div>

    <div class="field form-group mb-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirm password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"btn btn-secondary mb-3 mt-4" %>
    </div>
 <% end %>

  </div>
</div>
</div>
</div>