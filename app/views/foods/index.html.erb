<%= link_to "New food", new_food_path, class:"btn btn-secondary mb-5 mt-4 float-end new-food" %>


<table class="table table-striped table-bordered table-hover foods">
<thead class="table-dark">
   <tr>
    <th>Food</th>
    <th>Measurement Unit</th>
    <th>Price</th>
    <th>Actions</th>
  </tr>
</thead>
<% @foods.each do |food| %>
  <tr>
    <td><%= food.name %></td>
    <td><%= food.measurement_unit %></td>
    <td>$<%= food.price %></td>
    <td class="text-center"><%= button_to 'Delete', food, method: :delete, class:"btn btn-danger btn-sm" %></td>
  </tr>
<% end %>
</table>
 